void setup()
{
  // set up components
  TM1638Utility::Setup(tm);
  SSD1306Utility::Setup(display);
  //servo.attach(D6);
     
  // display MY boot logo
  displayBootLogo();

	// make random actually random
	// apparently this uses natural, analoge noise from the disconnected pin 0!
	//randomSeed(analogRead(0));

	food.Spawn();

  // make the game show
  gameStep();
}

void loop()
{
  // input
  int snakeInput = snakeMovementInput();
	if (snakeInput != -1)
		snake.dir = snakeInput;

  // draw the next game frame
  timeSinceLastFrame += 1;
  if (timeSinceLastFrame >= FRAME_DELAY)
  {
    timeSinceLastFrame = 0;
    gameStep();
  }
  
}